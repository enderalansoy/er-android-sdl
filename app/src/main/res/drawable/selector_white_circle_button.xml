<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/white_button_background_disabled"/>
            <stroke android:color="@color/white_button_background_stroke"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/white_button_background_pressed"/>
            <stroke android:color="@color/white_button_background_stroke"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white_button_background_normal"/>
            <stroke android:color="@color/white_button_background_stroke"/>
        </shape>
    </item>

</selector>